<div class="container">
    <div class="row col-md-4 center-block" style="float: none;">
        <div class="well well-sm">
            <form method="POST" data-toggle="validator">
                <div class="form-group">
                    <label for="name">Student Name</label>
                    <input class="form-control" id="name" name="name" required readonly data-maxlength="50" value="Bob">
                </div>
                <div class="form-group">
                    <label for="problem">Explain Computer Problem</label>
                    <textarea class="form-control" id="problem" rows="5" name="problem" required></textarea>
                </div>
                <div class="form-group">
                    <label for="period">What period of the day is it now?</label>
                    <select class="form-control" id="period" name="period" required>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="assettag">Asset Tag Number</label>
                    <input class="form-control" id="assettag" name="assettag" type="number" required>
                </div>
                <div class="form-group">
                    <label for="teacher">What is your teacher for this period?</label>
                    <input class="form-control" id="teacher" name="teacher" required data-maxlength="50">
                </div>
                <div class="form-group">
                    <label for="nextteacher">Who is your teacher for next period?</label>
                    <input class="form-control" id="nextteacher" name="nextteacher" required
                           data-maxlength="50">
                </div>
                <div class="form-group">
                    <label for="priority">Priority</label> (1 is lowest, 10 is highest)
                    <select class="form-control" id="priority" name="priority" required>
                        <option>1 (Missing key on keyboard; minor damage)</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10 (My laptop won't work at all)</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-default" formaction="submit">Submit</button>
            </form>
        </div>
    </div>
</div>